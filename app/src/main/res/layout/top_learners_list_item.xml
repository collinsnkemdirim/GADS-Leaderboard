<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="89dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/top_learners_img_view"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:src="@drawable/top_learner"
                android:contentDescription="@string/top_learners_images" />

            <TextView
                android:id="@+id/txtView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/top_learners_img_view"
                android:textColor="#757575"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Andrey Coman" />
            <TextView
                android:id="@+id/txtView_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="41dp"
                android:layout_toEndOf="@id/top_learners_img_view"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                tools:text="72 learning hours, Nigeria" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>