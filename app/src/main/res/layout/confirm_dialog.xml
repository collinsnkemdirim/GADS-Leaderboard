<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="wrap_content"
    android:layout_height="450dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:minWidth="350dp"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/close_btn_background"
            android:contentDescription="@string/close_btn"
            android:padding="5dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_close_btn" />

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#717171"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="Are you sure?" />


        <Button
            android:id="@+id/yes_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/yes_background"
            android:text="@string/click_yes"
            android:textAllCaps="false"
            android:textColor="#fa9819"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>
